# ===== API KEYS (Keep these secret!) =====
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# Replicate
REPLICATE_API_TOKEN=your_replicate_api_token_here

# ===== API CONFIGURATIONS =====
# Primary provider (openai, anthropic, google, huggingface, cohere)
PRIMARY_AI_PROVIDER=openai

# Fallback providers (comma-separated, in priority order)
FALLBACK_PROVIDERS=anthropic,google,huggingface

# Model configurations
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GOOGLE_MODEL=gemini-pro
HUGGINGFACE_MODEL=microsoft/DialoGPT-large
COHERE_MODEL=command

# Token limits
MAX_TOKENS=1000
TEMPERATURE=0.7

# Cost optimization
ENABLE_COST_OPTIMIZATION=true
MAX_MONTHLY_SPEND=100

# API rotation
ENABLE_LOAD_BALANCING=true
ROTATE_APIS=true